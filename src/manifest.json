{
    "manifest_version": 2,
    "name": "12ft.io extension",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },       
      "permissions": [
        "activeTab"
      ],
      "icons": {
        "48": "assets/12ft_48.png",
        "96": "assets/12ft_96.png"
      },
      
      "browser_action": {
        "default_icon": "assets/12ft.png",
        "default_title": "unpaywall",
        "default_popup": "index.html"
      }
}